---
interface Props {
  href: string;
  icon: string;
  text: string;
}

const { href, icon, text } = Astro.props;
---

<div class="contactItem-item">
  <a href={href} class="contactItem-link" target="_blank"
    ><i class={`contactItem-icon bx ${icon}`}></i>{text}</a
  >
</div>

<style>
  .contactItem-item {
    width: 100%;
    max-width: 250px;
    height: 150px;
    background-color: var(--background-color);
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    border-bottom: 1px solid var(--primary-color);

    transition: border-bottom 500ms ease;
  }
  .contactItem-link {
    color: var(--text-color-secondary);
    transition: color 500ms ease;
  }
  .contactItem-item:hover .contactItem-link {
    color: var(--text-color);
  }
  .contactItem-item:hover .contactItem-icon {
    color: var(--text-color);
    text-shadow: 0 0 5px var(--text-color);
    transform: scale(1.2);
  }
  .contactItem-item:hover {
    border-bottom: 7px solid var(--primary-color);
    transition: border-bottom 500ms ease;
  }
  .contactItem-icon {
    color: var(--text-color-secondary);
    display: block;
    font-size: 3.5rem;
    transition:
      color 500ms ease,
      transform 500ms ease,
      text-shadow 500ms ease;
  }
</style>
