---
import "../styles/global.css";
import {
  About,
  Hero,
  Skill,
  Study,
  Service,
  Portafoly,
  Contact,
} from "../sections";
import { SectionContainer } from "../components";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <SectionContainer id="home">
      <Hero />
    </SectionContainer>
    <SectionContainer id="about">
      <h2 class="subtitle">acerca de m√≠</h2>
      <About />
    </SectionContainer>
    <SectionContainer id="skill" isAlter>
      <h2 class="subtitle">habilidades</h2>
      <Skill />
    </SectionContainer>
    <SectionContainer id="study">
      <h2 class="subtitle">ESTUDIOS</h2>
      <Study />
    </SectionContainer>
    <SectionContainer id="service" isAlter>
      <h2 class="subtitle">SERVICIOS</h2>
      <Service />
    </SectionContainer>
    <SectionContainer id="service">
      <h2 class="subtitle">MI PORTAFOLIO</h2>
      <Portafoly />
    </SectionContainer>
    <SectionContainer id="service" isAlter>
      <h2 class="subtitle">CONTACTO</h2>
      <Contact />
    </SectionContainer>
  </main>
</Layout>

<style>
  .container {
    padding-top: 40px;
    width: 90%;
    max-width: 1380px;
    margin: auto;
  }
  .subtitle {
    font-size: var(--text-2xl);
    color: var(--primary-color);
    text-transform: uppercase;
    padding: 30px 0 20px 10px;
    text-align: center;
  }
</style>
